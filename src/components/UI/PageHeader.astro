---
interface PageHeaderProps {
  title: string;
  subtitle?: string;
  class?: string;
}

const {
  title,
  subtitle,
  class: className = "",
} = Astro.props as PageHeaderProps;
---

<div class={`text-center mb-12 ${className}`}>
  <h1 class="text-4xl font-bold mb-4 text-base-content">{title}</h1>
  {
    subtitle && (
      <div class="max-w-3xl mx-auto">
        <p class="text-xl text-base-content/70 leading-relaxed">{subtitle}</p>
      </div>
    )
  }
</div>
