---
import Accordion from "./Accordion.astro";

interface AccordionItemData {
  title: string;
  content: string;
}

interface InfoSectionProps {
  items: AccordionItemData[];
  description?: string;
  groupName?: string;
  class?: string;
}

const {
  items = [],
  description,
  groupName = "info-section",
  class: className = "",
} = Astro.props as InfoSectionProps;
---

<div class={`space-y-4 ${className}`}>
  {
    description && (
      <div class="mb-4">
        <p class="text-base leading-relaxed text-base-content/80">
          {description}
        </p>
      </div>
    )
  }
  {
    items.length > 0 && (
      <Accordion items={items} groupName={groupName} class="w-full" />
    )
  }
</div>
