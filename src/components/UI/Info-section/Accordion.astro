---
interface AccordionItem {
  title: string;
  content: string;
}

interface AccordionProps {
  items?: AccordionItem[];
  groupName?: string;
  className?: string;
}

const {
  items = [],
  groupName = "accordion",
  className = "",
} = Astro.props as AccordionProps;
---

<!-- Updated DaisyUI v5 Accordion using joined vertical pattern -->
<div class={`join join-vertical w-full bg-base-100 ${className}`}>
  {
    items.map((item, idx) => (
      <div class="collapse collapse-arrow join-item border-base-300 border">
        <input type="radio" name={groupName} checked={idx === 0} />
        <div class="collapse-title text-lg font-semibold">{item.title}</div>
        <div class="collapse-content">
          <p class="text-base">{item.content}</p>
        </div>
      </div>
    ))
  }
</div>
